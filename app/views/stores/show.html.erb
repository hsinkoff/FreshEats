<%= link_to root_path do %>
  <%= image_tag 'logo.jpg', :class => 'logo' %>
<% end %>

<div class="container-fluid">
  <div id="show-map"></div>
</div>
<div class= "text-center text-white">
  <br/>
  <h2><%= @store.name %></h2>
  <h4><%= @store.address %></h4>
  <br/>
  <h4>
    <%= "Last Tagged Fruits and Vegetables" %><br/><br/>
    <% if @store.apples == true %>
      <%= "Apples" %>
      <br/>
    <% end %>
    <% if @store.oranges == true %>
      <%= "Oranges" %>
      <br/>
    <% end %>
    <% if @store.bananas == true %>
      <%= "Bananas" %>
      <br/>
    <% end %>
    <% if @store.grapes == true %>
      <%= "Grapes" %>
      <br/>
    <% end %>
    <% if @store.other_fruits == true %>
      <%= "Other Fruit" %>
      <br/>
    <% end %>
    <% if @store.lettuce == true %>
      <%= "Lettuce" %>
      <br/>
    <% end %>
    <% if @store.carrots == true %>
      <%= "Carrots" %>
      <br/>
    <% end %>
    <% if @store.onions == true %>
      <%= "Onions" %>
      <br/>
    <% end %>
    <% if @store.potatoes == true %>
      <%= "Potatoes" %>
      <br/>
    <% end %>
    <% if @store.other_vegetables == true %>
      <%= "Other Vegetables" %>
      <br/>
    <% end %>
    <% if @store.no_fruits == true && @store.no_vegetables == true %>
      <%= "None" %>
    <% elsif @store.apples == false && @store.oranges == false && @store.bananas == false && @store.grapes == false && @store.other_fruits == false && @store.lettuce == false && @store.carrots == false && @store.onions == false && @store.potatoes == false && @store.other_vegetables == false %>
      <%= "None" %>
    <% end %>
  </h4>
  <br/>
  <br/>
  <h4><%= link_to 'Update Available Fruits and Vegetables', edit_store_path(@store), :class => 'heading' %></h4>
</div>

<script>
  function initialize() {
    var myLatlng = new google.maps.LatLng(<%= @store.latitude %>, <%= @store.longitude %>);
    var mapOptions = {
      zoom: 15,
      center: myLatlng
    };
    var map = new google.maps.Map(document.getElementById('show-map'), mapOptions);

    var marker = new google.maps.Marker({
      position: myLatlng,
      map: map,
      title: 'Hello World!'
    });
  }

  google.maps.event.addDomListener(window, 'load', initialize);

</script>
